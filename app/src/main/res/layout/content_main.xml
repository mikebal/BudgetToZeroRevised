<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thesolocoder.solo.budgettozerorevised.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#607d8b">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:paddingRight="50dp"
            android:id="@+id/tvSmallUpperSuper"
            android:background="#80607d8b"/>

        <TextView
            android:textColor="#FFFFFF"
            android:paddingTop="20dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvRemainingBudget"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/days_remaing"
            android:layout_alignParentTop="true"
            android:id="@+id/tvBudgetRuntime"
            android:paddingTop="83dp"
            android:paddingLeft="200dp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spend_button"
            android:id="@+id/bSpend"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvRemainingBudget"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:paddingLeft="0dp"
            android:paddingTop="200dp"
            >
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/ListWrapper">
           <ListView android:id="@+id/List"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:focusable="true"
                android:fastScrollEnabled="false"
                android:clickable="true"
                android:longClickable="true"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
